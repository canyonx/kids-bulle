{% extends 'base.html.twig' %}

{% block title %}Déplacer les participants{% endblock %}

{% block body %}
    <div class="card col-md-6 mx-auto">
        <div class="card-header">
            <h1 class="card-title">Déplacer les participants</h1>
            {{ component('BackButton', { url: path('app_admin_activity_show', {id: activity.id}) }) }}
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.activity) }}
                {{ form_errors(form.activity) }}
                {{ form_widget(form.activity, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary">Valider</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
