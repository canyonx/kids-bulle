<table class="table text-center">
    <thead>
        <tr>
            <th>{{"Date"|trans}}</th>
            {% if is_granted("ROLE_TEACHER") %}
                <th>{{"Teacher_(Me)"|trans}}</th>
            {% endif %}
            {% if is_granted("ROLE_USER") and (app.user.childs|length > 0) %} 
                {% for child in app.user.childs %}
                    <th>
                        <a href="{{ path('app_children_planning', {id: child.id}) }}" class="btn btn-outline-secondary">
                            {{"Planning_of"|trans}} {{ child.firstname }}
                        </a>
                    </th>
                {% endfor %}
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% for date, activities in planning %}
            {% for activity in activities %}
                    
                
                <tr class="align-middle">

                    {# Date #}
                    {% if loop.first %}
                        <td class="col-2" {% if activities|length > 1 %}rowspan="{{ activities|length }}"{% endif %}>
                            {{ date|date('j M') }}
                        </td>
                    {% endif %}

                    {% if is_granted("ROLE_TEACHER") %}
                        {# Teacher #}
                        {% if user == activity.teacher %}
                            <td>
                                <a class="btn btn-block" style="background-color: {{ activity.category.color }}" href="{{ path('app_activity_show', {id: activity.id}) }}">
                                    {{ activity.dateAt|date("H\\hi") }} - {{ activity.category }} <span class="badge badge-secondary">{{ activity.childrens|length }}</span>                           
                                </a>
                            </td>
                        {% else %}
                            <td></td>
                        {% endif %}
                    {% endif %}

                    {# Activity #}
                    {% for child in childs %}
                        {% if child in activity.childrens %}
                            <td>
                                <div class="btn-group col-10 row">
                                    <a class="col-10 btn" 
                                    style="background-color: {{ activity.category.color }}" 
                                    href="{{ path('app_activity_show', {id: activity.id}) }}">
                                        {{ activity.dateAt|date("H\\hi") }} - {{ activity.category }} 
                                        <span class="badge badge-secondary">{{ activity.childrens|length }}</span>                           
                                    </a>
                                    <a href="{{ path('app_child_action_activity', {child: child.id, action: 'remove', activity:activity.id}) }}" 
                                    class="col-2 btn btn-secondary" alt="remove">
                                        <i class="fa-solid fa-circle-xmark fa-xl"></i>
                                    </a>
                                </div>
                            </td>
                        {% else %}
                            <td></td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {% else %}
                <tr>
                    <td class="col-2">
                        {{ date|date('j M') }}
                    </td>
                    <td colspan="100%"></td>
                </tr>
            {% endfor %}
        {% endfor %}
    </tbody>
</table>