                --bs-btn-disabled-border-color: {{ disabled }};
            }
            .btn:hover {
               --bs-btn-hover-bg: {{ primary }};
                --bs-btn-hover-border-color: {{ primary }};
            }
        </style> #}
    </head>
    <body class="bg-teal" 
        {% if config.get('color') is defined %}
            style="background-color: {{ config.get('color') }};"
        {% endif %}>
        
        {# Navbar #}
        {% include 'shared/_navbar.html.twig' %}

        {# Body #}
        <div class="container my-4" style="min-height:88vh">

            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    {{ component('Alert', { type:type, message:message }) }}
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        {# Footer #}
        {% include "shared/_footer.html.twig" %}

    </body>
</html>
