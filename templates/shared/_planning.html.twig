<table class="table text-center">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Activity</th>
            {% if is_granted("ROLE_USER") and (app.user.childs|length > 0) %} 
                <th>Child</th>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <th>actions</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% for date, activities in planning %}
            {% for activity in activities %}
                <tr class="align-middle">
                    {% if loop.first %}
                        <td {% if activities|length > 1 %}rowspan="{{ activities|length }}"{% endif %}>
                            {{ date|date('d.m') }}
                        </td>
                    {% endif %}
                    <td>{{ activity.dateAt|date("H:i") }}</td>
                    <td>
                        <a class="btn btn-block" style="background-color: {{ activity.category.color }}" href="{{ path('app_activity_show', {id: activity.id}) }}">
                            {{ activity.category }} <span class="badge badge-secondary">{{ activity.childrens|length }}</span>                           
                        </a>
                    </td>
                    {% if is_granted("ROLE_USER") and (app.user.childs|length > 0) %} 
                        <td class="text-start">
                        <ul class="list-group">
                            {% for child in activity.childrens %}
                                {% if is_granted("CHILD_ACCESS", child) %}
                                    <li class="list-group-item">
                                        <a href="{{ path('app_activity_remove_child', {id: activity.id, child: child.id})}}"><i class="bi bi-x-square-fill"></i></a>
                                        {{ child.firstname }} {{ child.lastname }}
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </td>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a href="{{ path('app_admin_activity_show', {id: activity.id}) }}">
                                manage                            
                            </a>
                        </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td>
                        {{ date|date('d.m') }}
                    </td>
                    <td colspan="100%"></td>
                </tr>
            {% endfor %}
        {% endfor %}
    </tbody>
</table>