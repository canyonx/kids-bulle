{% extends 'base.html.twig' %}

{% block title %}{{"Activity"|trans}}{% endblock %}

{% block body %}
<section class="card col-md-6 mx-auto">
        <div class="card-header">
            <h1 class="card-title">{{"Activity"|trans}}</h1>
            <a class="btn btn-light" href="{{ path('app_admin_activity_index') }}">{{"back_to_list"|trans}}</a>
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ activity.dateAt|date('j F Y Ã  H\\hi') }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ activity.category }}</h6>
            <p>{{"With"|trans}} {{ activity.teacher.firstname }} {{ activity.teacher.lastname }}</p>
        </div>
        <div class="card-body">
            <p>{{"Registered"|trans}} : </p>
            {% for child in activity.childrens %}
                <div class="btn-group m-1">
                    <button class="btn btn-outline-dark" disabled>
                        {{ child }}
                    </button> 
                    <a class="btn btn-secondary" href="{{ path('app_activity_remove_child', {id: activity.id, child: child.id})}}">
                        <i class="fa-solid fa-circle-xmark fa-xl"></i>
                    </a>
                </div>
                <br>
            {% endfor %}
        </div>
        <div class="card-body">
            <a class="btn btn-primary" href="{{ path('app_admin_activity_edit', {'id': activity.id}) }}">{{"edit"|trans}}</a>
        </div>
        <div class="card-footer text-end">
            {{ include('admin/activity/_delete_form.html.twig') }}
        </div>

    </section>
{% endblock %}
