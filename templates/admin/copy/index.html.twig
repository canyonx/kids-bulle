{% extends 'base.html.twig' %}

{% block title %}Copier le {{ day|format_datetime(pattern='dd MMM', locale='fr')|capitalize}}{% endblock %}

{% block body %}
    <div class="card col-md-6 mx-auto">
        <div class="card-header">
            <h1 class="card-title">Copier le {{ day|format_datetime(pattern='dd MMMM', locale='fr')|capitalize}}</h1>
            {{ component('BackButton', { url: path('app_planning') }) }}
        </div>
        <div class="card-body">
            {{ form_start(form)}}
            {{ form_widget(form)}}
            <button type="submit" class="btn btn-primary">Copier</button>
            {{ form_end(form)}}
        </div>
    </div>
{% endblock %}
