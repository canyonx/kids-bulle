{% if app.user.childs %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fullname</th>
                <th>Category</th>
                <th>Planning</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for child in app.user.childs %}
            <tr>
                <td>{{ child.id }}</td>
                <td>{{ child.firstname }} {{ child.lastname }}</td>
                <td>{{ child.category ? child.category : '' }}</td>
                <td>
                    <a href="{{ path('app_children_planning', {'id': child.id}) }}">Planning de {{ child.firstname }}</a>
                </td>
                <td>
                    <a href="{{ path('app_children_show', {'id': child.id}) }}">show</a>
                    <a href="{{ path('app_children_edit', {'id': child.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>
        Pas encore d'enfant sur votre profil !
    </p>
{% endif %}

<a href="{{ path('app_children_new') }}">Create new</a>