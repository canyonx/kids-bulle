{% extends 'base.html.twig' %}

{% block title %}
	{{"Edit_activity"|trans}}
{% endblock %}

{% block body %}
	<div class="card col-md-6 mx-auto">
		<div class="card-header">
			<h1 class="card-title">{{"Edit_activity"|trans}}</h1>
			{{ component('BackButton', { url: path('app_admin_activity_show', {id: activity.id}) }) }}
		</div>
		<div class="card-body">
			{{ include('admin/activity/_form.html.twig') }}
		</div>
		{% if activity.dateAt|date("Y-m-d H:i:s", "Europe/Paris") > "now"|date("Y-m-d H:i:s", "Europe/Paris") %}
			<div class="card-footer text-end">
				{{ include('admin/activity/_delete_form.html.twig') }}
			</div>
        {% endif %}
	</div>
{% endblock %}
