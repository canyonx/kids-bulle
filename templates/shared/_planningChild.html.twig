<table class="table text-center">
    <thead>
        <tr>
            <th>Date</th>
            <th>Global</th>
            <th>{{ child.firstname }}</th>
        </tr>
    </thead>
    <tbody>
        {% for date, activities in planning %}
            {% for activity in activities %}
                <tr class="align-middle">
                    {# Date #}
                    {% if loop.first %}
                        <td {% if activities|length > 1 %}rowspan="{{ activities|length }}"{% endif %}>
                            {{ date|date('j M') }} - {{date|date('Ymd')}}
                        </td>
                    {% endif %}

                    {# Global #}
                    {% for act in reste %}
                        {% if act.dateAt|date('Ymd') is same as date|date('Ymd') %}
                            <td>
                                <a class="btn btn-block" 
                                style="background-color: {{ act.category.color }}" 
                                href="{{ path('app_children_add_activity', {id: child.id, activity:act.id}) }}">
                                    {{ act.dateAt|date("H\\hi") }} - {{ act.category }} 
                                    <span class="badge badge-secondary">{{ act.childrens|length }}</span>                           
                                </a>
                            </td>
                        {% else %}
                            <td></td>
                        {% endif %}
{% else %}
                            <td></td>
                    {% endfor %}
                    
                    {# Activity #}
                    <td>
                        <a class="btn btn-block" style="background-color: {{ activity.category.color }}" href="{{ path('app_activity_show', {id: activity.id}) }}">
                            {{ activity.dateAt|date("H\\hi") }} - {{ activity.category }} <span class="badge badge-secondary">{{ activity.childrens|length }}</span>                           
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td>
                        {{ date|date('j M') }}
                    </td>
                    <td colspan="100%"></td>
                </tr>
            {% endfor %}
        {% endfor %}
    </tbody>
</table>