<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} - Kid's Bulle</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
    </head>
    <body style="background-color: #00758f">

        {# Navbar #}
        {% include 'shared/_navbar.html.twig' %}

        {# Body #}
        <div class="container p-4" style="min-height:88vh">

            {% for label, messages in app.flashes %}
                <div class="alert alert-{{ label }} mb-4">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        {# Footer #}
        {% include "shared/_footer.html.twig" %}

    </body>
</html>
