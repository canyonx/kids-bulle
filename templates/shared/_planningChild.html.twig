<table class="table text-center">
    <thead>
        <tr>
            <th>{{"Date"|trans}}</th>
            <th>{{"All_Activities"|trans}}</th>
            <th>{{ child.firstname }}</th>
        </tr>
    </thead>
    <tbody>
        {% for date, activities in planning %}
            {% for activity in activities %}
                <tr class="align-middle">

                    {# Date #}
                    {% if loop.first %}
                        <td {% if activities|length > 1 %}rowspan="{{ activities|length }}"{% endif %}>
                            {{ date|date('j M') }}
                        </td>
                    {% endif %}

                    {# Activities global #}
                    {% if child in activity.childrens %}
                        <td></td>
                        
                        <td class="d-flex align-middle justify-content-center">
                            <div class="btn-group">
                                <a class="btn btn-block" 
                                style="background-color: {{ activity.category.color }}" 
                                href="{{ path('app_activity_show', {id: activity.id}) }}">
                                    {{ activity.dateAt|date("H\\hi") }} - {{ activity.category }} 
                                    <span class="badge badge-secondary">{{ activity.childrens|length }}</span>                           
                                </a>
                                <a href="{{ path('app_children_action_activity', {id: child.id, action: 'remove', activity:activity.id}) }}" 
                                class="btn btn-secondary" alt="remove">
                                    <i class="bi bi-x-circle-fill"></i>
                                </a>
                            </div>
                        </td>
                    {% else %}
                        <td class="d-flex align-middle justify-content-center">
                            <div class="btn-group">
                                <a class="btn btn-block" 
                                style="background-color: {{ activity.category.color }}" 
                                href="{{ path('app_activity_show', {id: activity.id}) }}">
                                    {{ activity.dateAt|date("H\\hi") }} - {{ activity.category }} 
                                    <span class="badge badge-secondary">{{ activity.childrens|length }}</span>                           
                                </a>
                                <a href="{{ path('app_children_action_activity', {id: child.id, action: 'add', activity:activity.id}) }}" 
                                class="btn btn-secondary" alt="add" width="80%">
                                    <i class="bi bi-plus-circle-fill"></i>
                                </a>
                            </div>
                        </td>

                        <td></td>
                    {% endif %}
                    
                </tr>
            {% else %}
                <tr>
                    <td>
                        {{ date|date('j M') }}
                    </td>
                    <td colspan="100%"></td>
                </tr>
            {% endfor %}
        {% endfor %}
    </tbody>
</table>