<div class="btn-group m-1">
	{% if is_granted("CHILD_ACCESS", child) %}
		<form method="post" action="{{ path('app_activity_action') }}" data-turbo-frame="activity-view">
			<input type="hidden" name="activity" value="{{ activity.id }}">
			<input type="hidden" name="child" value="{{ child.id }}">
			<input type="hidden" name="action" value="{{ child in notEnrolledChildren ? 'add' : 'remove' }}">
			
			<button type="submit" class="btn btn-primary">
				{{ child|title }}
				<i class="fa-solid {{ child in notEnrolledChildren ? 'fa-circle-plus' : 'fa-circle-xmark' }} fa-xl ms-2"></i>
			</button>
		</form>
	{% else %}
		<button class="btn btn-outline-dark" disabled>
			{{ child|title }}
		</button>
	{% endif %}
</div>
