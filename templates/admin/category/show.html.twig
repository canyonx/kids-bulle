{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>
                    <p>
                        {{ category.description }}
                    </p>
                </td>
            </tr>
            <tr>
                <th>Activities</th>
                <td>
                    <ul class="list-group">
                        {% for activity in category.activities %}
                            <li class="list-group-item">{{ activity.dateAt|date('Y-m-d H:i') }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_index') }}">back to list</a>

    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>

    {{ include('admin/category/_delete_form.html.twig') }}
{% endblock %}
