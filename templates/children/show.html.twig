{% extends 'base.html.twig' %}

{% block title %}Child{% endblock %}

{% block body %}
    <h1>Child</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ child.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ child.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ child.lastname }}</td>
            </tr>
            <tr>
                <th>BirthAt</th>
                <td>{{ child.birthAt ? child.birthAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ child.Category ? child.Category : '' }}</td>
            </tr>
            <tr>
                <th>Activities</th>
                <td>
                    <ul>
                        {% for activity in child.activities %}
                            <li>{{ activity.dateAt|date('Y-m-d H:i') }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user') }}">back to profile</a>

    <a href="{{ path('app_children_edit', {'id': child.id}) }}">edit</a>

    {{ include('children/_delete_form.html.twig') }}
{% endblock %}
