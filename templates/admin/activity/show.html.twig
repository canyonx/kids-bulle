{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
<section class="card col-6 mx-auto">
        <div class="card-header">
            <h1 class="card-title">Activity</h1>
            <a class="btn btn-light" href="{{ path('app_admin_activity_index') }}">back to list</a>
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ activity.dateAt|date('j F Y Ã  H\\hi') }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ activity.category }}</h6>
            <p>With {{ activity.teacher.firstname }} {{ activity.teacher.lastname }}</p>
        </div>
        <ul class="list-group list-group-flush">
            {% for child in activity.childrens %}
                <li class="list-group-item">
                    <a class="btn btn-link" href="{{ path('app_activity_remove_child', {id: activity.id, child: child.id})}}"><i class="bi bi-x-square-fill"></i></a>
                    {{ child }}
                </li>    
            {% endfor %}
        </ul>
        <div class="card-body">
            <a class="btn btn-primary" href="{{ path('app_admin_activity_edit', {'id': activity.id}) }}">edit</a>
        </div>
        <div class="card-footer text-end">
            {{ include('admin/activity/_delete_form.html.twig') }}
        </div>

    </section>
{% endblock %}
