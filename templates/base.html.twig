<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} - Kid's Bulle</title>
        <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
        <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no">
        <link rel="manifest" href="{{ asset('manifest.json')}}">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
    </head>
    <body class="bg-teal" data-controller="serviceWorker">

        {# Navbar #}
        {% include 'shared/_navbar.html.twig' %}

        {# Body #}
        <div class="container my-4" style="min-height:88vh">

            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    {{ component('Alert', { type:type, message:message }) }}
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        {# Footer #}
        {% include "shared/_footer.html.twig" %}

    </body>
</html>
