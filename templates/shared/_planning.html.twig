<table class="table text-center">
    <thead>
        <tr>
            <th>{{"Date"|trans}}</th>
            <th>{{"Activity"|trans}}</th>
            {# {% if is_granted("ROLE_USER") and (app.user.childs|length > 0) %} 
                <th>Child</th>
            {% endif %} #}
            {% if is_granted('ROLE_ADMIN') %}
                <th>{{"actions"|trans}}</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% for date, activities in planning %}
            {% for activity in activities %}
                <tr class="align-middle">
                    {# Date #}
                    {% if loop.first %}
                        <td class="col-2" {% if activities|length > 1 %}rowspan="{{ activities|length }}"{% endif %}>
                            {{ date|date('j M') }}
                        </td>
                    {% endif %}
                    {# Activity #}
                    <td>
                        {% if is_granted("ROLE_USER") %}
                            <a class="col-10 btn btn-block" style="background-color: {{ activity.category.color }}" href="{{ path('app_activity_show', {id: activity.id}) }}">
                                {{ activity.dateAt|date("H\\hi") }} - {{ activity.category }} <span class="badge badge-secondary">{{ activity.childrens|length }}</span>                           
                            </a>
                        {% else %}
                            <button class="col-10 btn btn-block" style="background-color: {{ activity.category.color }}">
                                {{ activity.dateAt|date("H\\hi") }} - {{ activity.category }} <span class="badge badge-secondary">{{ activity.childrens|length }}</span>                           
                            </button>
                        {% endif %}
                    </td>
                    {# Child #}
                    {# {% if is_granted("ROLE_USER") and (app.user.childs|length > 0) %} 
                        <td class="text-start d-flex justify-content-center">
                            {% for child in activity.childrens %}
                                {% if is_granted("CHILD_ACCESS", child) %}
                                    <div class="btn-group m-1">
                                        <button class="btn btn-outline-secondary" disabled>
                                            {{ child.firstname }} {{ child.lastname }}
                                        </button>
                                        <a class="btn btn-secondary" href="{{ path('app_activity_remove_child', {id: activity.id, child: child.id})}}">
                                            <i class="bi bi-x-circle-fill"></i>
                                        </a>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </td>
                    {% endif %} #}
                    {# Admin #}
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a class="btn btn-secondary" href="{{ path('app_admin_activity_show', {id: activity.id}) }}">
                                {{"manage"|trans}}                            
                            </a>
                        </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td>
                        {{ date|date('j M') }}
                    </td>
                    <td colspan="100%"></td>
                </tr>
            {% endfor %}
        {% endfor %}
    </tbody>
</table>