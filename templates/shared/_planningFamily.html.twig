<table class="table text-center">
    <thead>
        <tr>
            <th>Date</th>
            {# <th>Activity</th> #}
            {% if is_granted("ROLE_USER") and (app.user.childs|length > 0) %} 
                {% for child in app.user.childs %}
                    <th>{{ child.firstname }}</th>
                {% endfor %}
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% for date, activities in planning %}
            {% for activity in activities %}
                <tr class="align-middle">

                    {# Date #}
                    {% if loop.first %}
                        <td {% if activities|length > 1 %}rowspan="{{ activities|length }}"{% endif %}>
                            {{ date|date('j M') }}
                        </td>
                    {% endif %}

                    {# Activity #}
                    {% for child in app.user.childs %}
                        {% if child in activity.childrens %}
                            <td>
                                {% if is_granted("ROLE_USER") %}
                                    <a class="btn btn-block" style="background-color: {{ activity.category.color }}" href="{{ path('app_activity_show', {id: activity.id}) }}">
                                        {{ activity.dateAt|date("H\\hi") }} - {{ activity.category }} <span class="badge badge-secondary">{{ activity.childrens|length }}</span>                           
                                    </a>
                                {% else %}
                                    <button class="btn btn-block" style="background-color: {{ activity.category.color }}">
                                        {{ activity.dateAt|date("H\\hi") }} - {{ activity.category }} <span class="badge badge-secondary">{{ activity.childrens|length }}</span>                           
                                    </button>
                                {% endif %}
                            </td>
                        {% else %}
                            <td></td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {% else %}
                <tr>
                    <td>
                        {{ date|date('j M') }}
                    </td>
                    <td colspan="100%"></td>
                </tr>
            {% endfor %}
        {% endfor %}
    </tbody>
</table>