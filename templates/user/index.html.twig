{% extends 'base.html.twig' %}

{% block title %}{{ app.user.firstname }} {{ app.user.lastname }}{% endblock %}

{% block body %}
    <section class="row">
        <div class="col">
            <h1>{{ app.user.firstname }} {{ app.user.lastname }}</h1>
            <a href="{{ path('app_user_edit') }}">edit</a>
        </div>
        <div class="col">
            <p>
                {{ app.user.email }} <br>
                {{ app.user.phone }} <br>
                {{ app.user.fulladress }}
            </p>
        </div>
    </section>
    
    <hr>

    <section>
        <h2>Mes enfants</h2>
        {% if app.user.childs %}
            {% include "children/_table.html.twig" %}
        {% else %}
            <p>
                Pas encore d'enfant sur votre profil !
            </p>
        {% endif %}
    </section>

    <hr>

    <section>
        <h2>Le planning</h2>
        {% include "user/_planning.html.twig" %}
    </section>
{% endblock %}
