{% extends 'base.html.twig' %}

{% block title %}{{"User_index"|trans}}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">{{"User_index"|trans}} - <span class="text-muted">{{ users|length }}</span></h1>
        </div>
        <div class="card-body">
            <table class="table table-striped" id="childTable" data-controller="childTableOrder" style="display: block">
                <thead>
                    <tr>
                        <th data-action="click->childTableOrder#sortTable" class="text-primary" style="cursor:pointer">{{"Fullname"|trans}}</th>
                        <th>{{"Email"|trans}}</th>
                        <th>{{"Phone"|trans}}</th>
                        <th>{{"Address"|trans}}</th>
                        <th>{{"Childs"|trans}}</th>
                        <th data-action="click->childTableOrder#sortTable" class="text-primary" style="cursor:pointer">{{"Roles"|trans}}</th>
                        <th>{{"actions"|trans}}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.lastname|title }} {{ user.firstname|title }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.phone }}</td>
                            <td>{{ user.fulladress|title }}</td>
                            <td>
                                {% for child in user.childs %}
                                    <li>
                                        {{ child|title }}
                                    </li>
                                {% endfor %}
                            </td>
                            <td>{{ user.roles[0] | split('_')[1] }}</td>
                            <td>
                                <a class="btn btn-link" href="{{ path('app_admin_user_edit', {id: user.id}) }}">RÃ´le</a>
                            </td>
                            <td>
                                 {{ include('admin/user/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">{{"No_records_found"|trans}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
