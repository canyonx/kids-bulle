{% extends 'base.html.twig' %}

{% block title %}{{"Accueil"|trans}}{% endblock %}

{% block body %}
<section class="mb-4">
    <h1 class="text-light">Kid's Bulle</h1>
    <p class="text-light">{{"Website_subtitle"|trans}}</p>

    <div class="row">
        {% for category in categories %}
            <div class="col-md-4">
                <div class="card mb-4" style="background-color:{{ category.color }}">
                    <div class="card-header">
                        <h3 class="card-title">{{ category.name }}</h3>
                    </div>
                    <div class="card-body">
                        <p>{{ category.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>

<section class="mb-4">
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">{{"Planning"|trans}}</h1>
        </div>
        <div class="card-body">
            {% include "planning/_planning.html.twig" %}
        </div>
    </div>
</section>

{% endblock %}
