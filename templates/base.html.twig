        {% set disabled = primary %}

        <style>
            .btn-primary {
                --bs-btn-bg: {{ primary }};
                --bs-btn-border-color: {{ primary }};
                --bs-btn-hover-bg: {{ primary }};
                --bs-btn-hover-border-color: {{ primary }};
                --bs-btn-active-bg: {{ primary }};
