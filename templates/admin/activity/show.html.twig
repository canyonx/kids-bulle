{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>DateAt</th>
                <td>{{ activity.dateAt ? activity.dateAt|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ activity.category.name }}</td>
            </tr>
            <tr>
                <th>Teacher</th>
                <td>{{ activity.teacher }}</td>
            </tr>
            <tr>
                <th>Childrens</th>
                <td>
                    <ul class="list-group">
                        {% for child in activity.childrens %}
                            <li class="list-group-item">
                                {{ child }} - 
                                <a href="{{ path('app_admin_activity_remove_child', {id: activity.id, child: child.id}) }}">remove</a>
                            </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_activity_index') }}">back to list</a>

    <a href="{{ path('app_admin_activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('admin/activity/_delete_form.html.twig') }}
{% endblock %}
